# HOS Emergency Medical Chatbot - Environment Variables

# API Keys
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# RAG System Settings
AUTO_REINDEX_ON_CRAWL=1
REINDEX_DEBOUNCE_SEC=120

# Crawling Settings
USE_PLAYWRIGHT_CRAWLING=1
PW_HEADLESS=1
PW_NAV_TIMEOUT_MS=15000
PW_WAIT_UNTIL=networkidle
CRAWL_MAX_LINKS_PER_SITE=8

# Image Processing
IMG_RED_RATIO=0.3
IMG_BURN_RATIO=0.2

# Application Settings
FAST_MODE=false
CONTACT_EMAIL=hos-emergency-bot@example.com

# Server Settings (for development)
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Database (for future PostgreSQL integration)
# POSTGRES_PASSWORD=your-postgres-password

# Redis (for future caching)
# REDIS_URL=redis://localhost:6379
